<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_3"
        android:layout_marginLeft="@dimen/dimen_8"
        android:paddingBottom="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_3">

        <TextView
            android:id="@+id/tv_mail_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_3"
            android:text="2016-04-06" />

        <TextView
            android:id="@+id/tv_mail_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mail_item_time"
            android:lineSpacingExtra="3dp"
            android:text="邮件标题"
            android:textColor="@color/text_color2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_mail_item_addUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_mail_item_title"
            android:layout_marginBottom="@dimen/dimen_5"
            android:background="@drawable/shape_transactor_bg"
            android:text="张全蛋" />

        <TextView
            android:id="@+id/tv_mail_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mail_item_title"
            android:layout_marginRight="@dimen/dimen_5"
            android:paddingTop="@dimen/dimen_4"
            android:layout_toLeftOf="@id/tv_mail_item_addUser"
            android:text="发件人:"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/line_color" />
</LinearLayout>