<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10"
        >
        <TextView
            android:id="@+id/item_every_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-11-28"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12"
            android:background="@drawable/shape_time"
            />
        <TextView
            android:id="@+id/item_every_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="    1.编写 至信协同 日常页面UI。
    2.编写 日常页面功能逻辑功能。
    3.学习 使用逐帧动画。
    4.修复 日职协同 百度地图BUG。"
            android:textColor="@color/text_color2"
            android:textSize="@dimen/dimen_14"
            android:layout_toLeftOf="@id/item_every_time"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/line_color"/>
</LinearLayout>