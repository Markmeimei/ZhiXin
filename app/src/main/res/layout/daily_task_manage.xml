<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
    android:orientation="vertical">

    <include layout="@layout/activity_task_header" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_5"
        android:paddingTop="@dimen/dimen_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_head_btn"
            android:padding="@dimen/dimen_1.5">

            <Button
                android:id="@+id/task_fragment_btn1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_left_press"
                android:text="@string/task_not_receive"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15" />

            <View
                android:layout_width="@dimen/dimen_1.5"
                android:layout_height="fill_parent"
                android:background="@color/main_color" />

            <Button
                android:id="@+id/task_fragment_btn2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_5"
                android:text="@string/task_received"
                android:textColor="@color/main_color"
                android:textSize="@dimen/dimen_15" />

            <View
                android:layout_width="@dimen/dimen_1.5"
                android:layout_height="fill_parent"
                android:background="@color/main_color" />

            <Button
                android:id="@+id/task_fragment_btn3"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_right_normal"
                android:gravity="center"
                android:text="@string/task_complete"
                android:textColor="@color/main_color"
                android:textSize="@dimen/dimen_15" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/task_fragment_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

</LinearLayout>
