<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow">
    <include layout="@layout/activity_header"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_10">
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/selector_ll"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/sliding_password"
                style="@style/rl_text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_pic"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dimen_15"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/selector_ll"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/sliding_mobile"
                style="@style/rl_text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_pic"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dimen_15"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/selector_ll"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/sliding_safe"
                style="@style/rl_text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_pic"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dimen_15"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_10">
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/selector_ll"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/sliding_notice"
                style="@style/rl_text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_pic"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dimen_15"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_20">
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@drawable/selector_ll"
            android:paddingLeft="@dimen/dimen_15"
            android:paddingRight="@dimen/dimen_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/sliding_password"
                style="@style/rl_text"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/line_color"/>
    </LinearLayout>
</LinearLayout>